{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
    ],
    "target": "es2016",                                 

    "module": "commonjs",                              
    "baseUrl": ".",                                    
    "paths": {
      "*": ["src/*"]
    },                                     
    "types": ["node"],   
    "resolveJsonModule": true,                         

    "outDir": "./build",                         
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                   
    "skipLibCheck": true                             
  }
}
